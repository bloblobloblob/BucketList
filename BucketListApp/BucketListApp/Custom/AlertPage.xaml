<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BucketListApp.Custom.AlertPage"
             xmlns:custom="clr-namespace:BucketListApp"
             BackgroundColor="#FFF3E2"
             Padding="40">
    <ContentPage.Content>
        <Frame Margin="0, 240, 0, 240" CornerRadius="20" BackgroundColor="#FFF3E2" BorderColor="#FBAB57">
            <StackLayout Margin="0, 10, 0, 10" BackgroundColor="#FFF3E2" Spacing="20">
                <Label x:Name="Up" FontAttributes="Bold" FontSize="Large" Text="Ошибка" HorizontalOptions="CenterAndExpand" TextColor="Black"></Label>
                <Label x:Name="Med" VerticalOptions="CenterAndExpand"
                    FontSize="Medium" Text="Возникла какая-то неполадка" TextColor="Black"/>
                <ImageButton Source="delete.png" Margin="220, -130, 0, 140" Aspect="AspectFill" x:Name="btn1" HorizontalOptions="CenterAndExpand" Clicked="Pop" BackgroundColor="#FFF3E2"/>
            </StackLayout>
        </Frame>
    </ContentPage.Content>
</ContentPage>
