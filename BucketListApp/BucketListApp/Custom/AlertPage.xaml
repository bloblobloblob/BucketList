<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BucketListApp.Custom.AlertPage"
             BackgroundColor="#FFF3E2"
             Padding="40">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#FBAB57" Padding="20" Margin="0, 200, 0, 200" Spacing="20">
            <Label x:Name="Up" FontAttributes="Bold" FontSize="Large" Text="Ошибка" HorizontalOptions="Center" TextColor="Black"></Label>
            <BoxView HeightRequest="1" BackgroundColor="#050905"></BoxView>
            <ScrollView Orientation="Vertical" VerticalOptions="FillAndExpand">
                <Label x:Name="Med" FontSize="Medium" Text="Какая-то неполадка" TextColor="Black"></Label>
            </ScrollView>
            <BoxView HeightRequest="1" BackgroundColor="#050905"></BoxView>
            <StackLayout Orientation="Horizontal">
                <Button x:Name="btn1" Text="Понял" HorizontalOptions="CenterAndExpand" Clicked="Pop" BackgroundColor="Black" TextColor="#FFF3E2"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>