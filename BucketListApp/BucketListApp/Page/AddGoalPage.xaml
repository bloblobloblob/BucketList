<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BucketListApp.AddGoalPage"
             xmlns:local="clr-namespace:BucketListApp" 
             IconImageSource="add"
             Title="Добавить цель">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Добавить цель" FontSize="18" 
                   TextColor="Black" 
                   FontAttributes="Bold" 
                   Margin ="0, 20, 0, 20" 
                   HorizontalOptions="Center"
                   FontFamily="Inter"/>
            <StackLayout Padding="18, 10, 18, 18">
                <Button BackgroundColor="#FBAB57" Text="Собственная цель" 
                    FontSize="18" TextColor="Black" FontAttributes="Bold"
                    HeightRequest="61" WidthRequest="345" TextTransform="None"
                    CornerRadius="10" Clicked="ToCreateGoalPage"/>
                <Label Text="Готовые цели" FontSize="16" Margin="0, 10"
                       HorizontalOptions="CenterAndExpand" TextColor="#000000"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>