<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BucketListApp.TextInfo"
             Background="#1E1E1E">
    <ContentPage.Content>
        <StackLayout>
            <ScrollView>
                <StackLayout Margin="16, 0, 16, 0">
                    <Label x:Name="TitleArticle" 
                   TextColor="#FFF3E2" 
                   FontAttributes="Bold" 
                   Margin ="0, 20, 0, 20" 
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   FontSize="18"
                   FontFamily="Inter"/>
                    <Image x:Name="Img"  Aspect="AspectFill"/>
                    <Label x:Name="TextArt" 
                           TextColor="#FFF3E2" 
                           FontSize="14" 
                           HorizontalTextAlignment="Start" 
                           VerticalTextAlignment="Start"/>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>